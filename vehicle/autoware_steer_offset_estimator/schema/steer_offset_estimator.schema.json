{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parameters for Steer Offset Estimator Node",
  "type": "object",
  "definitions": {
    "steer_offset_estimator": {
      "type": "object",
      "properties": {
        "initial_covariance": {
          "type": "number",
          "description": "steer offset is larger than tolerance",
          "default": "1000.0"
        },
        "update_hz": {
          "type": "number",
          "description": "update hz of steer data",
          "default": "10.0",
          "minimum": 0.0
        },
        "initial_offset": {
          "type": "number",
          "description": "initial steer offset value",
          "default": "0.0"
        },
        "process_noise_covariance": {
          "type": "number",
          "description": "process noise covariance for Kalman filter",
          "default": "0.01",
          "minimum": 0.0
        },
        "measurement_noise_covariance": {
          "type": "number",
          "description": "measurement noise covariance for Kalman filter",
          "default": "0.01",
          "minimum": 0.0
        },
        "denominator_floor": {
          "type": "number",
          "description": "minimum value for denominator to avoid numerical issues",
          "default": "1.0e-12",
          "minimum": 0.0
        },
        "covariance_floor": {
          "type": "number",
          "description": "minimum value for covariance to avoid numerical issues",
          "default": "1.0e-12",
          "minimum": 0.0
        },
        "min_velocity": {
          "type": "number",
          "description": "velocity below this value is not used",
          "default": "1.0",
          "minimum": 0.0
        },
        "max_steer": {
          "type": "number",
          "description": "steer above this value is not used",
          "default": "0.03"
        }
      },
      "required": [
        "initial_covariance",
        "update_hz",
        "initial_offset",
        "process_noise_covariance",
        "measurement_noise_covariance",
        "denominator_floor",
        "covariance_floor",
        "min_velocity",
        "max_steer"
      ]
    }
  },
  "properties": {
    "/**": {
      "type": "object",
      "properties": {
        "ros__parameters": {
          "$ref": "#/definitions/steer_offset_estimator"
        }
      },
      "required": ["ros__parameters"]
    }
  },
  "required": ["/**"]
}
