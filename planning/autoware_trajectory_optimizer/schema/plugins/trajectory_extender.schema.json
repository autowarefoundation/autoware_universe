{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trajectory Extender Plugin Parameters",
  "type": "object",
  "properties": {
    "nearest_dist_threshold_m": {
      "type": "number",
      "default": 1.5,
      "minimum": 0,
      "description": "Distance threshold for trajectory matching [m]"
    },
    "nearest_yaw_threshold_rad": {
      "type": "number",
      "default": 1.0,
      "minimum": 0,
      "description": "Yaw threshold for trajectory matching [rad]"
    },
    "backward_trajectory_extension_m": {
      "type": "number",
      "default": 5.0,
      "minimum": 0,
      "description": "Length to extend trajectory backward using ego history [m]"
    }
  },
  "required": [
    "nearest_dist_threshold_m",
    "nearest_yaw_threshold_rad",
    "backward_trajectory_extension_m"
  ]
}
