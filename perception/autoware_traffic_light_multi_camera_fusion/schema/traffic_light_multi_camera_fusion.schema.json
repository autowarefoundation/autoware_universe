{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "autoware_traffic_light_multi_camera_fusion parameter",
  "type": "object",
  "definitions": {
    "autoware_traffic_light_multi_camera_fusion": {
      "type": "object",
      "properties": {
        "message_lifespan": {
          "type": "number",
          "description": "The maximum timestamp span to be fused.",
          "default": 0.0
        },
        "approximate_sync": {
          "type": "boolean",
          "description": "Whether to work in Approximate Synchronization Mode.",
          "default": false
        },
        "prior_log_odds": {
          "type": "number",
          "description": "The uniform prior log-odds to initialize the belief for any new traffic light state. 0.0 means a neutral (50%) initial belief. Positive values make all states initially more likely, negative values make them less likely.",
          "default": 0.0
        }
      },
      "required": ["message_lifespan", "approximate_sync"],
      "additionalProperties": false
    }
  },
  "properties": {
    "/**": {
      "type": "object",
      "properties": {
        "ros__parameters": {
          "$ref": "#/definitions/autoware_traffic_light_multi_camera_fusion"
        }
      },
      "required": ["ros__parameters"],
      "additionalProperties": false
    }
  },
  "required": ["/**"],
  "additionalProperties": false
}
