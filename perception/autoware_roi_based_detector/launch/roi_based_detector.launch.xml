<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="input/rois0" default="input/rois0"/>
  <arg name="input/rois1" default="input/rois1"/>
  <arg name="input/camera_info0" default="input/camera_info0"/>
  <arg name="input/camera_info1" default="input/camera_info1"/>

  <arg name="output/rois0/objects" default="~/rois0/objects"/>
  <arg name="output/rois1/objects" default="~/rois1/objects"/>

  <arg name="param_path" default="$(find-pkg-share autoware_roi_based_detector)/config/roi_based_detector.param.yaml"/>

  <node pkg="autoware_roi_based_detector" exec="roi_based_detector_node" name="roi_based_detector" output="screen">
    <param name="input/rois0" value="$(var input/rois0)"/>
    <param name="input/rois1" value="$(var input/rois1)"/>
    <param name="input/camera_info0" value="$(var input/camera_info0)"/>
    <param name="input/camera_info1" value="$(var input/camera_info1)"/>

    <param name="output/rois0/objects" value="$(var output/rois0/objects)"/>
    <param name="output/rois1/objects" value="$(var output/rois1/objects)"/>

    <param from="$(var param_path)"/>
  </node>
</launch>
